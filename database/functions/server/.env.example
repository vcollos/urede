## Variáveis de ambiente para rodar o servidor local (Deno)
# Copie para database/functions/server/.env e ajuste conforme necessário

PORT=8000

# CORS: defina a(s) origem(ns) permitida(s). Suporta múltiplas separadas por vírgula e wildcard do tipo *.dominio.com
ALLOWED_ORIGINS=http://localhost:3400,http://127.0.0.1:3400,http://localhost:3503,http://127.0.0.1:3503
APP_URL=http://localhost:5173
DEFAULT_CONFEDERACAO_ID=001
EMAIL_CONFIRMATION_TIMEOUT_HOURS=24

# Banco de dados
# Defina o driver desejado: "postgres" ou "sqlite"
DB_DRIVER=postgres
DATABASE_DB_URL=postgresql://usuario:senha@127.0.0.1:5432/urede
DATABASE_DB_POOL_SIZE=5
# Caso prefira SQLite para prototipagem, troque o driver para "sqlite" e informe o caminho:
# SQLITE_PATH=./data/urede.db
DB_SCHEMA=public
TABLE_PREFIX=urede_

# Autenticação JWT local
AUTH_PROVIDER=local
JWT_SECRET=troque-este-segredo
BREVO_CONFIRMATION_TEMPLATE_ID=
BREVO_APPROVAL_TEMPLATE_ID=

# Google Drive (Central de Arquivos)
GDRIVE_ENABLED=true
GDRIVE_DRIVE_ID=
GDRIVE_ROOT_FOLDER_ID=root
# Opcional: substitui GDRIVE_ROOT_FOLDER_ID para o módulo UDocs
GDRIVE_UDOCS_ROOT_FOLDER_ID=
# Opcional: pasta raiz dedicada do módulo UMarketing
GDRIVE_UMARKETING_ROOT_FOLDER_ID=
GDRIVE_SERVICE_ACCOUNT_EMAIL=
GDRIVE_SERVICE_ACCOUNT_PRIVATE_KEY=
# Chave mestra para criptografar o JSON da Service Account salvo em configurações
CENTRAL_ARQUIVOS_ENCRYPTION_KEY=
# Exemplo: {"Normativas":"<folderId1>","Estatutos":"<folderId2>"}
GDRIVE_CATEGORY_FOLDERS_JSON={}
GDRIVE_SCOPES=https://www.googleapis.com/auth/drive.readonly
ARQUIVOS_AUDIT_RETENTION_DAYS=365
