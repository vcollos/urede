## Variáveis de ambiente para rodar o servidor local (Deno)
# Copie para database/functions/server/.env e ajuste conforme necessário

PORT=8000

# CORS: defina a(s) origem(ns) permitida(s). Suporta múltiplas separadas por vírgula e wildcard do tipo *.dominio.com
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
APP_URL=http://localhost:5173
DEFAULT_CONFEDERACAO_ID=001
EMAIL_CONFIRMATION_TIMEOUT_HOURS=24

# Banco de dados
# Defina o driver desejado: "postgres" ou "sqlite"
DB_DRIVER=postgres
DATABASE_DB_URL=postgresql://usuario:senha@127.0.0.1:5432/urede
DATABASE_DB_POOL_SIZE=5
# Caso prefira SQLite para prototipagem, troque o driver para "sqlite" e informe o caminho:
# SQLITE_PATH=./data/urede.db
DB_SCHEMA=public
TABLE_PREFIX=urede_

# Autenticação JWT local
AUTH_PROVIDER=local
JWT_SECRET=troque-este-segredo
BREVO_CONFIRMATION_TEMPLATE_ID=
BREVO_APPROVAL_TEMPLATE_ID=
